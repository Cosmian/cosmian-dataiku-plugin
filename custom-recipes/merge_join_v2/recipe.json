// This file is the descriptor for the Custom code recipe merge_join_v2

{
  // Meta data for display purposes
  "meta": {
    "label": "Dataset join",
    "description": "Perform secure joins on datasets",
    "icon": "icon-puzzle-piece"
  },
  "kind": "PYTHON",
  // Inputs and outputs are defined by roles. In the recipe's I/O tab, the user can associate one
  // or more dataset to each input and output role.

  // The "arity" field indicates whether the user can associate several datasets to the role ('NARY')
  // or at most one ('UNARY'). The "required" field indicates whether the user is allowed to
  // associate no dataset with the role.

  "inputRoles": [
    {
      "name": "datasets",
      "label": "Dataset",
      "description": "Dataset to join with",
      "arity": "NARY",
      "required": true,
      "acceptsDataset": true
    }
    // ...
  ],
  "outputRoles": [
    {
      "name": "output",
      "label": "joined dataset",
      "description": "Dataset which is the result of the join",
      "arity": "UNARY",
      "required": true,
      "acceptsDataset": true
    }
    // ...
  ],
  // The field "params" holds a list of all the params
  // for wich the user will be prompted for values in the Settings tab of the recipe.

  // The available parameter types are:
  // STRING, INT, DOUBLE, BOOLEAN, PASSWORD, SELECT, MAP, COLUMN, COLUMNS, TEXTAREA

  "params": [
    {
      "name": "join_type",
      "type": "SELECT",
      "label": "Type of join",
      "description": "The type of join that will be performed",
      "selectChoices": [
        {
          "value": "inner",
          "label": "inner join"
        },
        {
          "value": "full",
          "label": "full outer join"
        },
        {
          "value": "outer",
          "label": "outer table n"
        }
      ],
      "defaultValue": "inner",
      "mandatory": true
    },
    {
      "name": "outer_join_index",
      "type": "INT",
      "label": "Outer table index",
      "description": "The index of the table which is the outer table",
      "defaultValue": "1",
      "mandatory": false,
      "visibilityCondition": "model.join_type=='outer'"
    },
    {
      "name": "join_key",
      "type": "STRING",
      "label": "Join functional key",
      "description": "This key is required to perform a join over encrypted data (MCFE setting only)",
      "defaultValue": "",
      "mandatory": false
    }
  ],
  // The field "resourceKeys" holds a list of keys that allows to limit the number
  // of concurrent executions and activities triggered by this recipe.
  //
  // Administrators can configure the limit per resource key in the Administration > Settings > Flow build
  // screen.

  "resourceKeys": []
}
